{
  "name": "hmda-platform-ui",
  "version": "0.0.0",
  "description": "Frontend code for the HMDA filing system",
  "main": "index.js",
  "engines": {
    "node": ">=6.x"
  },
  "scripts": {
    "test": "jest --coverage",
    "snyk": "snyk test",
    "clean": "rimraf ./dist && mkdir -p ./dist ./dist/js ./dist/css ./dist/fonts ./dist/img",
    "start": "./server/server.js",
    "js": "browserify -d -t [ babelify --presets [ es2015 react ] --plugins [ babel-plugin-transform-object-rest-spread ] ] -t [ envify --HMDA_API https://192.168.99.100:4443/hmda ] -p [ minifyify --map app.min.js.map --output ./dist/js/app.min.js.map --uglify [ -cm ] ] ./src/js/index.js > ./dist/js/app.min.js && browserify -d -t [ babelify --presets [ es2015 react ] --plugins [ babel-plugin-transform-object-rest-spread ] ] -p [ minifyify --map silent_renew.js.map --output ./dist/js/silent_renew.js.map --uglify [ -cm ] ] ./src/js/silent_renew.js > ./dist/js/silent_renew.js",
    "sass": "node-sass --quiet --output-style=compressed --source-map-embed --source-map=./dist/css/ ./src/sass/app.scss ./dist/css/app.min.css && cp node_modules/uswds/src/fonts/sourcesanspro-* ./dist/fonts",
    "html": "html-minifier --collapse-whitespace ./src/index.html -o ./dist/index.html && html-minifier --collapse-whitespace ./src/silent_renew.html -o ./dist/silent_renew.html",
    "img": "imagemin ./src/img/* -o ./dist/img && cp -r ./node_modules/uswds/dist/img ./dist",
    "postinstall": "npm run clean",
    "watch:js": "nodemon --exitcrash -e js,jsx -w src/js -x 'npm run js'",
    "watch:tests": "nodemon --exitcrash -e js -w __tests__ -x 'jest --coverage -o'",
    "watch:sass": "nodemon --exitcrash -e scss -w src/sass -x 'npm run sass'",
    "watch:html": "nodemon --exitcrash -e html -w src -x 'npm run html'",
    "watch:server": "nodemon --exitcrash -e js,json -w server -x 'npm start'",
    "watch": "npm run watch:server & npm run watch:js & npm run watch:tests & npm run watch:sass & npm run watch:html",
    "build": "npm run js && npm run sass && npm run html && npm run img"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfpb/hmda-platform-ui.git"
  },
  "keywords": [
    "HMDA"
  ],
  "author": "Consumer Financial Protection Bureau",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cfpb/hmda-platform-ui/issues"
  },
  "homepage": "https://github.com/cfpb/hmda-platform-ui#readme",
  "devDependencies": {
    "babel-jest": "14.0.0",
    "babel-plugin-transform-object-rest-spread": "6.8.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.11.1",
    "babelify": "7.3.0",
    "body-parser": "1.15.2",
    "browserify": "13.1.0",
    "envify": "3.4.1",
    "express": "4.14.0",
    "express-history-api-fallback": "2.0.0",
    "html-minifier": "3.0.2",
    "imagemin": "5.2.2",
    "imagemin-cli": "3.0.0",
    "jest-cli": "14.0.0",
    "minifyify": "7.3.3",
    "node-sass": "3.10.0",
    "nodemon": "1.10.0",
    "react-addons-test-utils": "15.3.0",
    "reactify": "1.1.1",
    "redux-mock-store": "1.1.2",
    "rimraf": "2.5.4",
    "snyk": "1.17.4",
    "uglify-js": "2.7.0"
  },
  "browserify": {
    "transform": [
      "envify",
      "reactify",
      "babelify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/Wrapper.js"
    ],
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/lodash",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/redux-mock-store",
      "<rootDir>/node_modules/redux-thunk",
      "<rootDir>/node_modules/fbjs",
      "<rootDir>/__tests__/Wrapper.js"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.9.1",
    "babelify": "7.2.0",
    "immutable": "3.8.1",
    "envify": "3.4.1",
    "jquery": "3.1.0",
    "jquery.easing": "1.4.1",
    "oidc-client": "1.2.0",
    "react": "15.3.0",
    "react-dom": "15.3.0",
    "react-redux": "4.4.5",
    "react-router": "2.6.0",
    "react-router-redux": "4.0.5",
    "react-select": "0.9.1",
    "redux": "3.5.2",
    "redux-logger": "2.7.4",
    "redux-oidc": "2.2.1",
    "redux-thunk": "2.1.0",
    "superagent": "2.1.0",
    "uswds": "0.12.1"
  }
}
