{
  "name": "hmda-platform-ui",
  "version": "0.0.0",
  "description": "Frontend code for the HMDA filing system",
  "main": "index.js",
  "engines": {
    "node": ">=6.x"
  },
  "scripts": {
    "test": "jest",
    "snyk": "snyk test",
    "clean": "rimraf ./dist && mkdir -p ./dist ./dist/js ./dist/css ./dist/fonts ./dist/img",
    "start": "./server/server.js",
    "js": "browserify ./src/js/index.js | uglifyjs > ./dist/js/app.min.js",
    "less": "lessc ./src/less/app.less ./dist/css/app.css && cp node_modules/cf-icons/src/fonts/* ./dist/fonts",
    "minify:css": "cleancss -o ./dist/css/app.css ./dist/css/app.css",
    "html": "html-minifier --collapse-whitespace ./src/index.html -o ./dist/index.html",
    "img": "imagemin ./src/img/* -o ./dist/img",
    "build": "npm run js && npm run less && npm run html && npm run img",
    "postinstall": "npm run clean",
    "watch:js": "nodemon --exitcrash -e js,jsx -w src/js -x 'npm run js'",
    "watch:tests": "nodemon --exitcrash -e js -w __tests__ -x 'npm test'",
    "watch:less": "nodemon --exitcrash -e less -w src/less -x 'npm run less'",
    "watch:html": "nodemon --exitcrash -e html -w src -x 'npm run html'",
    "watch:server": "nodemon --exitcrash -e js,json -w server -x 'npm start'",
    "watch": "npm run watch:server & npm run watch:js & npm run watch:tests & npm run watch:less & npm run watch:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfpb/hmda-platform-ui.git"
  },
  "keywords": [
    "HMDA"
  ],
  "author": "Consumer Financial Protection Bureau",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/cfpb/hmda-platform-ui/issues"
  },
  "homepage": "https://github.com/cfpb/hmda-platform-ui#readme",
  "devDependencies": {
    "babel-jest": "14.0.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.11.1",
    "babelify": "7.3.0",
    "body-parser": "1.15.2",
    "browserify": "13.1.0",
    "clean-css": "3.4.19",
    "envify": "3.4.1",
    "express": "4.14.0",
    "express-history-api-fallback": "2.0.0",
    "html-minifier": "3.0.2",
    "imagemin": "5.2.2",
    "imagemin-cli": "3.0.0",
    "jest-cli": "14.0.0",
    "less": "2.7.1",
    "nodemon": "1.10.0",
    "react-addons-test-utils": "15.2.1",
    "reactify": "1.1.1",
    "rimraf": "2.5.4",
    "snyk": "1.17.4",
    "uglify-js": "2.7.0"
  },
  "browserify": {
    "transform": [
      "envify",
      "reactify",
      "babelify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ]
  },
  "dependencies": {
    "cf-buttons": "3.1.0",
    "cf-core": "3.4.0",
    "cf-expandables": "3.1.0",
    "cf-forms": "3.1.1",
    "cf-grid": "3.1.2",
    "cf-tables": "1.0.3",
    "cf-theme-cfpb": "1.0.0",
    "cf-typography": "3.0.7",
    "jquery": "3.1.0",
    "jquery.easing": "1.4.1",
    "react": "15.2.1",
    "react-dom": "15.2.1",
    "react-router": "2.6.0",
    "superagent": "2.1.0"
  }
}
